{
  "name": "matchbox-workspace",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SparkPost/matchbox.git"
  },
  "scripts": {
    "start:libby": "npm run build:tokens && NODE_ENV=development libby start",
    "start:libby:static": "NODE_ENV=production libby build && serve -c ./serve.json -p 9001",
    "prebuild": "lerna bootstrap",
    "build": "lerna run build",
    "build:tokens": "lerna run build --scope @sparkpost/design-tokens",
    "build:libby": "npm run build && NODE_ENV=production libby build",
    "clean": "lerna clean --yes",
    "pretest": "npm run clean && lerna link",
    "pretest:ci": "npm run build && npm run clean && lerna link",
    "test:e2e:headless": "NODE_ENV=test node_modules/.bin/cypress run",
    "test:e2e:gui": "NODE_ENV=test node_modules/.bin/cypress open",
    "test:e2e:ci": "start-server-and-test start:libby:static http://localhost:9001 test:e2e:headless",
    "test:regression:gui": "NODE_ENV=test percy exec -- node_modules/.bin/cypress open --config-file cypress-regression.json",
    "test:regression:headless": "NODE_ENV=test percy exec -- node_modules/.bin/cypress run --config-file cypress-regression.json",
    "test:regression:ci": "start-server-and-test start:libby:static http://localhost:9001 test:regression:headless",
    "test:unit": "TZ=UTC node scripts/test.js --config=./jest.config.json",
    "test:unit:ci": "CI=true npm run test:unit -- --colors --coverage",
    "lint": "node node_modules/eslint/bin/eslint.js packages",
    "lintfix": "npm run lint -- --fix",
    "lint:css": "stylelint './packages/**/!(*.spec|*.test).js'",
    "precommit": "lint-staged",
    "changelog": "dotenv lerna-changelog 2>&1 | tee .temp_changes.md && bash scripts/changelog.sh"
  },
  "lint-staged": {
    "**/(*.js|*.ts|*.tsx)": [
      "eslint --fix",
      "git add"
    ],
    "packages/**/!(*.spec|*.test).(js|ts|tsx)": [
      "stylelint",
      "git add"
    ]
  },
  "dependencies": {
    "@styled-system/prop-types": "^5.1.2",
    "@styled-system/props": "^5.1.5",
    "copy-to-clipboard": "^3.3.1",
    "downshift": "^3.2.10",
    "highlight.js": "^10.3.2",
    "jest-in-case": "^1.0.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-day-picker": "^7.4.8",
    "react-dom": "^17.0.2",
    "react-focus-lock": "^2.4.0",
    "react-scrolllock": "^5.0.1",
    "react-syntax-highlighter": "^15.4.4",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@percy/cli": "^1.0.0-beta.68",
    "@percy/cypress": "^3.1.1",
    "@sparkpost/libby-react": "^0.0.43",
    "@testing-library/cypress": "^7.0.4",
    "@testing-library/react": "^11.2.6",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.17",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.12",
    "@types/styled-system": "^5.1.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.3.1",
    "autoprefixer": "^8.4.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.11.1",
    "babel-preset-react-app": "^9.0.2",
    "browser-sync": "^2.27.5",
    "classnames": "^2.2.5",
    "css-loader": "^3.6.0",
    "cypress": "^6.5.0",
    "cypress-plugin-tab": "^1.0.1",
    "dotenv-cli": "^3.2.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "es-abstract": "^1.16.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-config-sparkpost": "^1.4.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-lodash": "^2.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.8.2",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "jest-styled-components": "^7.0.3",
    "lerna": "^4.0.0",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^7.1.0",
    "lodash.memoize": "^4.1.2",
    "plugin-error": "^1.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.3.2",
    "react-test-renderer": "^16.8.6",
    "react-transition-group": "^4.3.0",
    "resize-observer-polyfill": "^1.5.1",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "start-server-and-test": "^1.11.7",
    "style-loader": "^1.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "theo": "^8.1.5",
    "ts-loader": "^9.2.5",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "changelog": {
    "cacheDir": ".changelog",
    "labels": {
      "type: feature": "Features",
      "type: enhancement": "Enhancements",
      "type: bug": "Bug Fixes",
      "type: breaking change": "Breaking Changes",
      "type: security": "Security"
    }
  }
}
