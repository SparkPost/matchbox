{
  "name": "matchbox-workspace",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SparkPost/matchbox.git"
  },
  "scripts": {
    "start:site": "npm run build:tokens && cd site && npm run develop",
    "start:libby": "npm run build:tokens && NODE_ENV=development libby start",
    "start:storybook": "npm run build:tokens && start-storybook -p 9001 -c .storybook",
    "start:storybook:static": "build-storybook --quiet && http-server ./storybook-static -p 9001 --silent",
    "start:playroom": "npm run clean && NODE_ENV=development playroom start",
    "prebuild": "lerna bootstrap",
    "build": "lerna run build",
    "build:tokens": "lerna run build --scope @sparkpost/design-tokens",
    "build:site": "npm run build && cd site && npm run build",
    "build:playroom": "npm run clean && NODE_ENV=production playroom build",
    "clean": "lerna clean --yes",
    "pretest": "npm run clean && lerna link",
    "pretest:ci": "npm run build && npm run clean && lerna link",
    "test:e2e:headless": "NODE_ENV=test node_modules/.bin/cypress run",
    "test:e2e:gui": "NODE_ENV=test node_modules/.bin/cypress open",
    "test:e2e:ci": "start-server-and-test start:storybook:static http://localhost:9001 test:e2e:headless",
    "test:unit": "TZ=UTC node scripts/test.js --env=jsdom --config=./jest.config.json",
    "test:unit:ci": "CI=true npm run test:unit -- --colors --coverage",
    "lint": "node node_modules/eslint/bin/eslint.js packages",
    "lintfix": "npm run lint -- --fix",
    "lint:css": "stylelint './packages/**/!(*.spec|*.test).js'",
    "precommit": "lint-staged",
    "changelog": "dotenv lerna-changelog 2>&1 | tee .temp_changes.md && bash scripts/changelog.sh"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "packages/**/!(*.spec|*.test).js": [
      "stylelint",
      "git add"
    ]
  },
  "dependencies": {
    "@styled-system/prop-types": "^5.1.2",
    "@styled-system/props": "^5.1.5",
    "downshift": "^3.2.10",
    "highlight.js": "^10.3.2",
    "jest-in-case": "^1.0.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-day-picker": "^7.4.8",
    "react-dom": "^16.8.6",
    "react-focus-lock": "^2.4.0",
    "react-scrolllock": "^5.0.1",
    "react-syntax-highlighter": "^15.3.0",
    "styled-components": "^5.2.1",
    "styled-normalize": "^8.0.7",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@sparkpost/libby-react": "0.0.26",
    "@testing-library/cypress": "^5.3.1",
    "autoprefixer": "^8.4.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.11.1",
    "babel-preset-react-app": "^9.0.2",
    "browser-sync": "^2.26.14",
    "classnames": "^2.2.5",
    "css-loader": "^3.2.0",
    "cypress": "^3.8.3",
    "cypress-plugin-tab": "^1.0.1",
    "dotenv-cli": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "es-abstract": "^1.16.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-config-sparkpost": "^1.4.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-lodash": "^2.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.8.2",
    "gulp": "^4.0.2",
    "gulp-theo": "^2.0.1",
    "http-server": "^0.12.3",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-enzyme": "^7.1.1",
    "jest-styled-components": "^7.0.3",
    "lerna": "^3.21.0",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^7.1.0",
    "lodash.memoize": "^4.1.2",
    "playroom": "^0.18.1",
    "plugin-error": "^1.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.8.6",
    "react-transition-group": "^4.3.0",
    "resize-observer-polyfill": "^1.5.1",
    "start-server-and-test": "^1.11.7",
    "style-loader": "^1.0.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.2",
    "stylelint-processor-styled-components": "^1.10.0",
    "theo": "^8.1.5",
    "webpack": "^4.41.2"
  },
  "changelog": {
    "cacheDir": ".changelog",
    "labels": {
      "type: feature": "Features",
      "type: enhancement": "Enhancements",
      "type: bug": "Bug Fixes",
      "type: breaking change": "Breaking Changes",
      "type: security": "Security"
    }
  }
}
