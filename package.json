{
  "name": "matchbox-workspace",
  "private": true,
  "scripts": {
    "start:site": "lerna exec --scope @sparkpost/matchbox-site -- npm run develop",
    "start:storybook": "npm run build:tokens && start-storybook -p 9001 -c .storybook",
    "start:storybook:static": "build-storybook && http-server ./storybook-static -p 9001 --silent",
    "start:tokens": "lerna exec --scope @sparkpost/design-tokens npm run start",
    "start:playroom": "NODE_ENV=development playroom start",
    "prebuild": "lerna bootstrap",
    "build": "lerna run build --ignore @sparkpost/matchbox-site",
    "build:tokens": "lerna run build --scope @sparkpost/design-tokens",
    "build:site": "npm run bootstrap && lerna exec --scope @sparkpost/matchbox-site -- npm run build",
    "build:playroom": "NODE_ENV=production playroom build",
    "clean": "lerna clean --yes",
    "pretest": "npm run clean && lerna link",
    "pretest:ci": "npm run build && npm run clean && lerna link",
    "test:ci": "npm run test:unit:ci && npm run test:e2e:ci",
    "posttest:ci": "npm run coverage:all && npm run coveralls",
    "test:e2e:headless": "NODE_ENV=test node_modules/.bin/cypress run",
    "test:e2e:gui": "NODE_ENV=test node_modules/.bin/cypress open",
    "test:e2e:ci": "start-server-and-test start:storybook:static http://localhost:9001 test:e2e:headless",
    "test:unit": "node scripts/test.js --env=jsdom --config=./jest.config.json",
    "test:unit:ci": "npm run test:unit -- --coverage",
    "deploy-storybook": "storybook-to-ghpages",
    "build-storybook": "build-storybook",
    "lint": "node node_modules/eslint/bin/eslint.js packages",
    "lintfix": "npm run lint -- --fix",
    "precommit": "lint-staged",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "coverage:all": "npm run coverage:copy && npm run coverage:merge",
    "coverage:copy": "mkdir coverage || true && cp cypress-coverage/coverage-final.json coverage/from-cypress.json && cp jest-coverage/coverage-final.json coverage/from-jest.json",
    "coverage:merge": "nyc merge coverage && mv coverage.json .nyc_output/out.json && nyc report --reporter lcov --reporter html --report-dir coverage"
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@styled-system/prop-types": "^5.1.2",
    "@styled-system/props": "^5.1.5",
    "downshift": "^3.2.10",
    "jest-in-case": "^1.0.2",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-focus-lock": "^2.0.5",
    "styled-components": "^4.4.0",
    "styled-normalize": "^8.0.7",
    "styled-system": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@cypress/code-coverage": "^3.7.5",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-info": "^5.3.18",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addon-options": "^3.4.3",
    "@storybook/addons": "^5.2.5",
    "@storybook/preset-scss": "^1.0.2",
    "@storybook/react": "^5.2.5",
    "@storybook/storybook-deployer": "^2.8.6",
    "@testing-library/cypress": "^5.0.2",
    "autoprefixer": "^8.4.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^9.0.2",
    "browser-sync": "^2.26.7",
    "classnames": "^2.2.5",
    "coveralls": "^3.0.1",
    "css-loader": "^3.2.0",
    "cypress": "^3.8.0",
    "cypress-plugin-tab": "^1.0.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "es-abstract": "^1.16.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-config-sparkpost": "^1.4.1",
    "eslint-plugin-flowtype": "^2.46.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-lodash": "^2.7.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.8.2",
    "gulp": "^4.0.2",
    "gulp-theo": "^2.0.1",
    "http-server": "^0.12.3",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.1",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.21.0",
    "lint-staged": "^7.1.0",
    "node-sass": "^4.14.1",
    "playroom": "^0.18.1",
    "plugin-error": "^1.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.8.6",
    "react-transition-group": "^4.3.0",
    "sass-loader": "^8.0.0",
    "start-server-and-test": "^1.10.0",
    "style-loader": "^1.0.0",
    "theo": "^8.1.5",
    "webpack": "^4.41.2"
  },
  "nyc": {
    "include": [
      "packages/matchbox/src/components/**/*.js",
      "packages/matchbox/src/helpers/**/*.js",
      "packages/matchbox-icons/src/IconBase/**/*.js"
    ],
    "report-dir": "cypress-coverage"
  }
}
