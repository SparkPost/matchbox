{
  "name": "@sparkpost/matchbox",
  "version": "1.8.9",
  "description": "A design system",
  "main": "index.js",
  "author": "SparkPost",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SparkPost/matchbox"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "babel-node scripts/build.js --presets=node6",
    "test": "node scripts/test.js --env=jsdom",
    "storybook": "start-storybook -p 6006",
    "deploy-storybook": "storybook-to-ghpages",
    "build-storybook": "build-storybook",
    "lint": "eslint src"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "react": "^16.2.0",
    "react-day-picker": "^6.1.0",
    "react-dom": "^16.2.0",
    "react-icon-base": "^2.1.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/addon-info": "^3.2.6",
    "@storybook/addon-links": "^3.2.12",
    "@storybook/addon-options": "^3.2.6",
    "@storybook/addons": "^3.2.6",
    "@storybook/react": "^3.2.12",
    "@storybook/storybook-deployer": "^2.0.0",
    "autoprefixer": "^7.1.6",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^20.0.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-node6": "^11.0.0",
    "babel-preset-react": "^6.24.1",
    "change-case": "^3.0.1",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-react-app": "^2.0.1",
    "eslint-config-sparkpost": "^1.3.2",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.37.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.4.0",
    "fs-extra": "^3.0.1",
    "jest": "^20.0.3",
    "node-sass": "^4.5.2",
    "postcss-modules": "^0.7.0",
    "postcss-modules-scope": "^1.0.2",
    "prop-types": "^15.5.10",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.2",
    "rollup": "^0.41.6",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-postcss": "^0.4.3",
    "rollup-plugin-uglify": "^1.0.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.17.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|docs|node_modules|scripts)[/\\\\]"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": [
      "transform-class-properties"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "phantomjs": true
    },
    "rules": {
      "max-lines": [
        "warn",
        {
          "max": 200,
          "skipComments": true
        }
      ],
      "complexity": "off",
      "one-var": [
        "error",
        "never"
      ],
      "object-curly-spacing": [
        "error",
        "always",
        {
          "arraysInObjects": false,
          "objectsInObjects": false
        }
      ],
      "block-spacing": [
        "error",
        "always"
      ],
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "before",
            ":": "before"
          }
        }
      ]
    },
    "extends": [
      "react-app",
      "sparkpost"
    ]
  }
}
