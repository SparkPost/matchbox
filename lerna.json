{
  "lerna": "4.0.9",
  "packages": [
    "packages/design-tokens",
    "packages/matchbox-icons",
    "packages/matchbox",
    "packages/matchbox-media"
  ],
  "version": "4.3.2",
  "command": {
    "publish": {
      "ignoreChanges": [
        "**/tests/**",
        "**/*.md"
      ],
      "allowBranch": "main"
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "version": {
      "message": "Publish %s",
      "allowBranch": "main"
    }
  },
  "ignoreChanges": [
    "**/matchbox-site/**",
    "**/tests/**",
    "**/*.md"
  ]
}
